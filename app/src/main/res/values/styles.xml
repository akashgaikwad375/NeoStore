<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorRed</item>
    </style>

    <style name="Header">
        <item name="android:text">@string/login_header</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/header_size</item>
    </style>
    <style name="EditText_Field">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/edittext_box</item>
        <item name="android:textSize">@dimen/username_size</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_field</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/login_button_size</item>
    </style>

    <style name="NewAccount_Forgot_TextView_Style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/new_account_size</item>
    </style>

    <style name="Register_toolbar">
        <item name="android:background">@color/colorToolbarRed</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar_text_size">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="profile_email">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/profile_email</item>
    </style>
</resources>
