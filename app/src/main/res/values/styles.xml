<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Header">
        <item name="android:text">@string/login_header</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/header_size</item>
    </style>
    <style name="EditText_Field">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/edittext_box</item>
        <item name="android:textSize">@dimen/username_size</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_field</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">@dimen/login_button_size</item>
    </style>

    <style name="NewAccount_Forgot_TextView_Style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/new_account_size</item>
    </style>

    <style name="Register_toolbar">
        <item name="android:background">@color/colorToolbarRed</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar_text_size">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="profile_email">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/profile_email</item>
    </style>

    <style name="product_name_style">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/profile_email</item>
    </style>
    <style name="product_details_style">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/product_detail_size</item>
    </style>

    <style name="product_cost_style">
        <item name="android:textColor">@color/colorCostRed</item>
        <item name="android:textSize">@dimen/twenty</item>
    </style>

    <style name="address_style">
        <item name="android:textColor">@color/colorAddress</item>
        <item name="android:textSize">@dimen/username_size</item>
        <item name="android:maxLines">5</item>
    </style>

    <style name="address_Field_style">
        <item name="android:textColor">@color/colorAddress</item>
        <item name="android:textSize">@dimen/profile_email</item>
        <item name="android:maxLength">20</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/address_city_box</item>

    </style>

    <style name="Save_Button">
        <item name="android:background">@drawable/save_button_field</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/login_button_size</item>
    </style>

    <style name="pd_name_style">
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">@dimen/twenty</item>
    </style>
    <style name="pd_category_style">
        <item name="android:textColor">@color/colorLightblack</item>
        <item name="android:textSize">@dimen/sixteen</item>
    </style>
    <style name="pd_center_style">
        <item name="android:textColor">@color/colorLightblack</item>
        <item name="android:textSize">@dimen/twelve</item>
    </style>
    <style name="description_text_style">
        <item name="android:textColor">@color/colorDescription</item>
        <item name="android:textSize">@dimen/twelve</item>
    </style>
    <style name="description_style">
        <item name="android:textColor">@color/colorAddress</item>
        <item name="android:textSize">@dimen/twelve</item>
    </style>

    <style name="Rate_Button">
        <item name="android:background">@drawable/rate_button_field</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">@dimen/login_button_size</item>
    </style>

    <style name="Shipping_address_style">
        <item name="android:textColor">@color/colorAddress</item>
        <item name="android:textSize">@dimen/twenty_two</item>
    </style>

    <style name="quantity_Pdname_style">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/twenty_five</item>
    </style>
    <style name="Enter_quantity_style">
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textSize">@dimen/twenty</item>
    </style>
    <style name="Submit_Button">
        <item name="android:background">@drawable/submit_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/login_button_size</item>
    </style>

    <style name="Order_price_style">
        <item name="android:textColor">@color/colorAddress</item>
        <item name="android:textSize">@dimen/twenty</item>
    </style>

    <style name="Order_id_style">
        <item name="android:textColor">@color/colorOrderId</item>
        <item name="android:textSize">@dimen/seventeen</item>
    </style>
    <style name="Order_date_style">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/twelve</item>
    </style>
</resources>
