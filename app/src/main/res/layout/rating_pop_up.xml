<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/thirty_three"
        android:text="TextView"
        style="@style/quantity_Pdname_style" />

    <ImageView
        android:id="@+id/productimage"
        android:layout_width="260dp"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/thirty_three"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/slider_img1"
        android:layout_below="@+id/productname"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.1"
        android:isIndicator="false"
        android:layout_marginTop="@dimen/thirty_three"
        android:progressTint="@color/colorYellow"
        android:layout_below="@+id/productimage"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/rate_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_now"
        style="@style/Submit_Button"
        android:layout_below="@+id/rating"
        android:layout_alignEnd="@+id/productimage"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="@dimen/twenty_five"
        android:layout_marginTop="@dimen/twenty_five" />
</RelativeLayout>