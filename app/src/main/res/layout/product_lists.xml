<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/product_image"
        android:src="@drawable/chairsicon"
        android:layout_marginTop="@dimen/sixteen"
        android:layout_marginLeft="@dimen/product_detail_size"
        android:layout_width="@dimen/product_width"
        android:layout_height="@dimen/profile_height"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/product_detail_size">

            <TextView
                android:id="@+id/product_name"
                android:layout_marginTop="@dimen/twenty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/product_name_style"
                android:text="@string/tables"/>

            <TextView
                android:id="@+id/product_detail"
                android:layout_marginTop="@dimen/five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/product_details_style"
                android:text="@string/tables"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five">

            <TextView
                android:id="@+id/product_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/product_cost_style"
                android:text="@string/tables"/>

            <RatingBar
                android:id="@+id/product_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1.0"
                android:isIndicator="false"
                android:progressTint="@color/colorYellow"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>