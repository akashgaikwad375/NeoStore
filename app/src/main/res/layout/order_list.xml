<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <TextView
        android:id="@+id/order_id"
        style="@style/Order_id_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="@dimen/twenty"
        android:text="@string/order_id" />

    <TextView
        android:id="@+id/order_no"
        style="@style/Order_id_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/order_id"
        android:layout_marginStart="@dimen/five"
        android:layout_toEndOf="@+id/order_id"
        android:text="TextView" />

    <View
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:layout_alignStart="@+id/order_id"
        android:layout_below="@+id/order_id"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider" />


    <TextView
        android:id="@+id/order_date"
        style="@style/Order_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/order_id"
        android:layout_below="@+id/order_id"
        android:layout_marginBottom="@dimen/twenty"
        android:layout_marginTop="@dimen/twenty"
        android:text="@string/order_date" />

    <TextView
        android:id="@+id/date"
        style="@style/Order_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order_date"
        android:layout_alignBottom="@+id/order_date"
        android:layout_toEndOf="@+id/order_id"
        android:text="TextView" />

    <TextView
        android:id="@+id/price"
        style="@style/Order_price_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:text="TextView" />
</RelativeLayout>